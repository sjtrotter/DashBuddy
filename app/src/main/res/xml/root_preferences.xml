<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.PreferenceCategory app:title="Automation &amp; Safety">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_menu_toolbar_tactics"
            app:key="pref_master_auto_pilot"
            app:summary="Enable automated clicking and interactions"
            app:title="Auto-Pilot Master Switch" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:dependency="pref_master_auto_pilot"
            app:key="pref_safe_mode"
            app:summary="Block interactions while moving (>10mph)"
            app:title="Safe Mode" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:dependency="pref_master_auto_pilot"
            app:key="pref_auto_expand"
            app:summary="Automatically open delivery breakdown panels"
            app:title="Auto-Expand Details" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory app:title="Offer Strategy">

        <ListPreference
            app:defaultValue="payout"
            app:entries="@array/scoring_metrics"
            app:entryValues="@array/scoring_metric_values"
            app:icon="@drawable/ic_badge_dollar_plus"
            app:key="pref_scoring_metric"
            app:summary="How offers are scored and ranked"
            app:title="Prioritized Metric" />

        <SeekBarPreference
            app:defaultValue="5"
            app:key="pref_min_pay_threshold"
            app:max="15"
            app:min="2"
            app:showSeekBarValue="true"
            app:summary="Offers below this score lower"
            app:title="Minimum Pay Target" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory app:title="Auto-Decisioning">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="pref_auto_decline_enabled"
            app:summary="Instantly decline offers below criteria"
            app:title="Auto-Decline Bad Offers" />

        <EditTextPreference
            app:defaultValue="4.00"
            app:dependency="pref_auto_decline_enabled"
            app:inputType="numberDecimal"
            app:key="pref_auto_decline_min_pay"
            app:summary="Example: 4.00"
            app:title="Decline if Pay is Under" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory app:title="Developer">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_menu_toolbar_debug"
            app:key="pref_debug_mode"
            app:summary="Enable verbose logging and overlay info"
            app:title="Debug Mode" />
    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>