<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- This defines the border's color and thickness (weight) -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorOutline" />
    <!-- Using ?attr/colorOutline makes the border adapt to your app's theme -->

    <!-- We keep the fill transparent so it doesn't hide any parent background -->
    <solid android:color="@android:color/transparent" />

</shape>