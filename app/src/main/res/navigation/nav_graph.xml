<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_setup">

    <action
        android:id="@+id/action_global_setup"
        app:destination="@id/fragment_setup"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/fragment_setup"
        android:name="cloud.trotter.dashbuddy.ui.setup.SetupFragment"
        android:label="Setup"
        tools:layout="@layout/fragment_setup">
        <action
            android:id="@+id/action_setup_to_dashboard"
            app:destination="@id/fragment_dashboard"
            app:popUpTo="@id/fragment_setup"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/fragment_dashboard"
        android:name="cloud.trotter.dashbuddy.ui.dashboard.DashboardFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboard_to_settings"
            app:destination="@id/fragment_settings" />
    </fragment>

    <fragment
        android:id="@+id/fragment_settings"
        android:name="cloud.trotter.dashbuddy.ui.settings.SettingsFragment"
        android:label="Settings">

        <action
            android:id="@+id/action_settings_to_market"
            app:destination="@id/fragment_market_settings" />
        <action
            android:id="@+id/action_settings_to_automation"
            app:destination="@id/fragment_automation_settings" />
    </fragment>

    <fragment
        android:id="@+id/fragment_market_settings"
        android:name="cloud.trotter.dashbuddy.ui.settings.market.MarketSettingsFragment"
        android:label="Market Strategy" />

    <fragment
        android:id="@+id/fragment_automation_settings"
        android:name="cloud.trotter.dashbuddy.ui.settings.automation.AutomationSettingsFragment"
        android:label="Automation Rules" />

</navigation>