<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_setup">
    <fragment
        android:id="@+id/fragment_setup"
        android:name="cloud.trotter.dashbuddy.ui.setup.SetupFragment"
        android:label="Setup"
        tools:layout="@layout/fragment_setup">

        <action
            android:id="@+id/action_setup_to_dashboard"
            app:destination="@id/fragment_dashboard"
            app:popUpTo="@id/fragment_setup"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/fragment_dashboard"
        android:name="cloud.trotter.dashbuddy.ui.dashboard.DashboardFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_dashboard_to_settings"
            app:destination="@id/fragment_settings" />
    </fragment>

    <fragment
        android:id="@+id/fragment_settings"
        android:name="cloud.trotter.dashbuddy.ui.settings.SettingsFragment"
        android:label="Settings" />

</navigation>